doctype html
html
	include header.jade
		title SBHS Timetable #{page}
		style.
			#content{position:absolute;top:20px;left:0;width:100%;text-align:center;font-weight:100;font-size:50px;}
			#period-name{font-size:50px;}
			#in{font-size:16px;font-weight:400;}
			#countdown{font-size:100px;font-weight:100;}
			#sidebar{position:fixed;right:0;top:0;text-align:right;font-size:12px}
			#top-line-notice{position:fixed;top:0;left:0;width:100%;text-align:center}
			.really-annoying{position:fixed;font-size:50px;font-weight:100;z-index:-1;color:#CC0000}//- that's the dark holo red
			#tl{top:0;left:0}
			#br{bottom:0;right:0}
		//-link(rel="stylesheet",href="/style/main.css")
		//-link(href='//fonts.googleapis.com/css?family=Roboto+Condensed:400&subset=latin',rel='stylesheet',type='text/css')
		script(async,defer,src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js")
		script(async,defer,src="//cdnjs.cloudflare.com/ajax/libs/datejs/1.0/date.min.js")
		script(async,src="/script/belltimes.concat.js")
	body
		div#content
			div#period-name
				span#period-label Undefined
				div#in
					span#in-label ends in
					div#countdown
						span#countdown-label NaN:NaN:NaN
		yield
		div#top-line-notice
		div#sidebar
			span#login-status
			span#next
		div.really-annoying#tl ALPHA
		div.really-annoying#br ALPHA
